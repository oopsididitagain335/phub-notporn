<!-- views/login.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>PulseHub Login</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="container">
    <h1>Login</h1>

    <!-- Show error if present -->
    <% if (typeof error !== 'undefined' && error) { %>
      <p class="error"><%= error %></p>
    <% } %>

    <!-- Corrected form: single field for username OR email -->
    <form action="/login" method="POST">
      <input 
        type="text" 
        name="usernameOrEmail" 
        placeholder="Username or Email" 
        required 
        autocomplete="off"
      >
      <input 
        type="password" 
        name="password" 
        placeholder="Password" 
        required 
        autocomplete="off"
      >
      <button type="submit">Login</button>
    </form>

    <p>No account? <a href="/">Signup</a></p>
  </div>
</body>
</html>
