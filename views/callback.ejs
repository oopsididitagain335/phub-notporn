<!-- views/callback.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Connecting... | PulseHub</title>
  <style>
    /* Reset & Base Styles */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Inter', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(135deg, #1a1c2c, #1e2a4a);
      color: #ffffff;
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 20px;
      text-align: center;
    }

    .container {
      max-width: 500px;
      padding: 50px 30px;
      background: rgba(255, 255, 255, 0.05);
      border-radius: 16px;
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .icon {
      font-size: 3.5rem;
      margin-bottom: 20px;
    }

    h1 {
      font-size: 1.8rem;
      margin-bottom: 12px;
      color: #6d9eeb;
    }

    p {
      font-size: 1.05rem;
      color: #cccccc;
      line-height: 1.6;
    }

    /* Spinner */
    .spinner {
      width: 50px;
      height: 50px;
      border: 5px solid #ffffff1f;
      border-top: 5px solid #6d9eeb;
      border-radius: 50%;
      animation: spin 1s linear infinite;
      margin: 30px auto;
    }

    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    /* Small note */
    .note {
      margin-top: 20px;
      font-size: 0.9rem;
      color: #aaa;
    }
  </style>

  <!-- Load Inter font -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap" rel="stylesheet">

  <!-- Redirect after a delay (optional) -->
  <script>
    // Optional: In case redirect stalls
    setTimeout(() => {
      window.location.href = '<%= redirectUrl || "/home" %>';
    }, 3000);
  </script>
</head>
<body>

  <div class="container">
    <div class="icon">üîê</div>
    <h1>Connecting with Discord</h1>
    <p>We're securely linking your account and loading your access...</p>

    <!-- Loading Spinner -->
    <div class="spinner"></div>

    <p class="note">You'll be redirected shortly. Please don't close this page.</p>
  </div>

</body>
</html>
