<!-- views/signup.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>PulseHub Signup</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=Poppins:wght@600;700&display=swap" rel="stylesheet">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      font-family: 'Inter', sans-serif;
      background: radial-gradient(circle at top, #0f111a, #050508);
      color: #fff;
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 20px;
    }
    
    .container {
      max-width: 400px;
      width: 100%;
      background: rgba(20, 22, 35, 0.75);
      border-radius: 16px;
      padding: 40px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
      backdrop-filter: blur(12px);
      border: 1px solid rgba(109, 158, 235, 0.15);
      text-align: center;
    }
    
    h1 {
      font-family: 'Poppins', sans-serif;
      font-size: 2rem;
      font-weight: 600;
      color: #6d9eeb;
      margin-bottom: 24px;
    }
    
    .error {
      background: rgba(255, 82, 82, 0.15);
      color: #ff5252;
      padding: 12px;
      border-radius: 8px;
      margin-bottom: 20px;
      font-size: 0.9rem;
    }
    
    input {
      width: 100%;
      padding: 14px;
      margin-bottom: 16px;
      background: rgba(30, 32, 45, 0.7);
      border: 1px solid rgba(109, 158, 235, 0.2);
      border-radius: 8px;
      color: #fff;
      font-size: 1rem;
      outline: none;
      transition: all 0.3s ease;
    }
    
    input:focus {
      border-color: #6d9eeb;
      box-shadow: 0 0 0 2px rgba(109, 158, 235, 0.3);
    }
    
    button {
      width: 100%;
      padding: 14px;
      background: linear-gradient(90deg, #5865F2, #4c58d7);
      color: white;
      border: none;
      border-radius: 8px;
      font-size: 1rem;
      font-weight: 500;
      cursor: pointer;
      transition: all 0.3s ease;
      margin-top: 8px;
    }
    
    button:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 15px rgba(88, 101, 242, 0.4);
    }
    
    p {
      margin-top: 20px;
      color: #aaa;
      font-size: 0.95rem;
    }
    
    a {
      color: #6d9eeb;
      text-decoration: none;
      transition: color 0.3s ease;
    }
    
    a:hover {
      color: #a084ff;
      text-decoration: underline;
    }
    
    @media (max-width: 480px) {
      .container {
        padding: 30px 20px;
      }
      
      h1 {
        font-size: 1.8rem;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>PulseHub Signup</h1>
    <% if (typeof error !== 'undefined') { %>
      <p class="error"><%= error %></p>
    <% } %>

    <form action="/signup" method="POST">
      <input type="text" name="username" placeholder="Username" required autocomplete="off">
      <input type="email" name="email" placeholder="Email" required autocomplete="off">
      <input type="password" name="password" placeholder="Password" required autocomplete="off">
      <button type="submit">Sign Up</button>
    </form>

    <p>Already have an account? <a href="/login">Login</a></p>
  </div>
</body>
</html>
