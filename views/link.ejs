<!-- views/link.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Link Account</title>
  <link rel="stylesheet" href="/style.css">
  <style>
    .code-display {
      background: #2d2d2d;
      color: #00d1b2;
      padding: 15px;
      border-radius: 8px;
      font-family: 'Courier New', monospace;
      font-size: 1.2em;
      margin: 20px 0;
      text-align: center;
    }
    .code-display code {
      background: none;
      color: inherit;
    }
    button {
      background: #007bff;
      color: white;
      border: none;
      padding: 10px 20px;
      border-radius: 6px;
      cursor: pointer;
      font-size: 1em;
      margin: 5px;
    }
    button:hover {
      background: #0056b3;
    }
    .instructions {
      margin: 20px 0;
      line-height: 1.6;
    }
    .footer {
      margin-top: 20px;
      font-size: 0.9em;
      color: #aaa;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>üîó Link Your Discord Account</h1>

    <p>Hello, <strong><%= username %></strong>!</p>

    <div class="instructions">
      <ol>
        <li>
          <strong>Join our Discord server:</strong>
          <a href="<%= inviteUrl %>" target="_blank" style="color:#00d1b2;">discord.gg/MmDs5ees4S</a>
        </li>
        <li>Type this command in any channel:</li>
      </ol>
    </div>

    <!-- ‚úÖ Show clean command: /link ABC123XY -->
    <div class="code-display">
      <code>/link <%= linkCode %></code>
    </div>

    <button onclick="copyCode()">üìã Copy Command</button>
    <button onclick="checkLink()">‚úÖ I've Linked ‚Äî Check Status</button>

    <div class="footer">
      <p>
        ‚ö†Ô∏è If the Discord link shows a blank page or "JavaScript" error, try opening it in an incognito tab or different browser.
      </p>
      <p>
        This code can only be used once. After linking, it will be permanently disabled.
      </p>
    </div>
  </div>

  <script>
    // ‚úÖ Copy only the clean command: /link ABC123XY
    function copyCode() {
      const command = '/link <%= linkCode %>'; // e.g., /link K7M2X9LP
      navigator.clipboard.writeText(command).then(() => {
        alert('Command copied! Paste it in Discord.');
      }).catch(err => {
        console.error('Copy failed:', err);
        alert('Copy failed. Please copy manually.');
      });
    }

    // Refresh to check if linked
    function checkLink() {
      window.location.reload();
    }
  </script>
</body>
</html>
