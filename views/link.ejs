<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Link Account</title>
  <link rel="stylesheet" href="/style.css">
  <style>
    .code-display {
      background: #2d2d2d;
      color: #00d1b2;
      padding: 15px;
      border-radius: 8px;
      font-family: 'Courier New', monospace;
      font-size: 1.2em;
      margin: 20px 0;
      text-align: center;
    }
    .code-display code {
      background: none;
      color: inherit;
    }
    button {
      background: #007bff;
      color: white;
      border: none;
      padding: 10px 20px;
      border-radius: 6px;
      cursor: pointer;
      font-size: 1em;
    }
    button:hover {
      background: #0056b3;
    }
    .instructions {
      margin: 20px 0;
      line-height: 1.6;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>ðŸ”— Link Your Discord Account</h1>

    <p>Hello, <strong><%= username %></strong>!</p>

    <div class="instructions">
      <ol>
        <li>Join our Discord server: <a href="<%= inviteUrl %>" target="_blank">discord.gg/MmDs5ees4S</a></li>
        <li>Type this command in any channel:</li>
      </ol>
    </div>

    <!-- âœ… Show the real link code -->
    <div class="code-display">
      <code>/link code:<%= linkCode %></code>
    </div>

    <button onclick="copyCode()">ðŸ“‹ Copy Command</button>
    <button onclick="checkLink()">âœ… I've Linked â€” Check Status</button>

    <p style="margin-top: 20px; font-size: 0.9em; color: #aaa;">
      This code can only be used once. After linking, it will be permanently disabled.
    </p>
  </div>

  <script>
    // Copy command to clipboard
    function copyCode() {
      const code = '/link code:<%= linkCode %>';
      navigator.clipboard.writeText(code).then(() => {
        alert('Command copied! Paste it in Discord.');
      }).catch(err => {
        console.error('Copy failed:', err);
        alert('Copy failed. Please copy manually.');
      });
    }

    // Refresh to check if linked
    function checkLink() {
      window.location.reload();
    }
  </script>
</body>
</html>
